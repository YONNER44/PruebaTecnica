@{
    ViewData["Title"] = "Buscar libros por autor";
}

<h2 class="mb-4">Buscar libros por autor</h2>

<form asp-action="Search" asp-controller="Books" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="authorName" class="form-label">Nombre del autor</label>
        <input type="text"
               name="authorName"
               id="authorName"
               class="form-control"
               placeholder="Autor"
               required />
    </div>

    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.Error
    </div>
}

<hr />

<a asp-action="History" asp-controller="Books" class="btn btn-secondary mt-3">
    Ver historial de búsquedas
</a>